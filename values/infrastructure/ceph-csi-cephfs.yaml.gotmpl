csiConfig:
  - clusterID: {{ .Values.secret.ceph_cluster_fsid }}
    monitors:
      - "10.10.10.201:6789"
      - "10.10.10.202:6789"
      - "10.10.10.203:6789"

secret:
  create: true
  userID: "{{ .Values.secret.ceph_user }}"
  userKey: "{{ .Values.secret.ceph_key }}"
  
storageClass:
  name: ceph-cephfs
  mounter: kernel
  create: true
  reclaimPolicy: Retain
  clusterID: {{ .Values.secret.ceph_cluster_fsid }}
  fsName: "{{ .Values.secret.cephfs_name }}"
  pool: "{{ .Values.secret.cephfs_data_pool }}"
  allowVolumeExpansion: true

logLevel: 0
sidecarLogLevel: 0
logSlowOperationInterval: 5m
