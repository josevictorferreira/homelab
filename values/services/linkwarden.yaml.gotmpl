image:
  registry: ghcr.io
  repository: linkwarden/linkwarden
  tag: "v2.11.5@sha256:4d0d1261f6cefcd5752708f357b3aa355da3432fb4a023672890c8707217f914"
linkwarden:
  labels:
    app: linkwarden
    release: linkwarden
  domain: "linkwarden.{{ .Values.secret.domain }}"
  nextAuthSecret:
    value: "{{ .Values.secret.linkwarden_secret }}"
  data:
    storageType: filesystem
    filesystem:
      pvc:
        storageClass: ceph-cephfs
        reclaimPolicy: Retain
  database:
    user: postgres
    password: "{{ .Values.secret.postgresql_password }}"
    host: postgresql-hl
    name: linkwarden
  envs:
    ANTHROPIC_MODEL: {{ "claude-3-haiku-20240307" }}
    ANTHROPIC_API_KEY: "{{ .Values.secret.anthropic_api_key }}"
resources:
  requests:
    cpu: "50m"
    memory: "1Gi"
  limits:
    memory: "1.5Gi"
service:
  port: 80
  type: LoadBalancer
  loadBalancerIP: {{ .Values.load_balancer.addresses.services.linkwarden }}
postgresql:
  enabled: false
ingress:
  enabled: true
  className: nginx
  annotations:
    cert-manager.io/cluster-issuer: cloudflare-issuer
  tls:
    - hosts:
        - "linkwarden.{{ .Values.secret.domain }}"
      secretName: "wildcard-tls"
